@model CarAdverts.Web.Models.Advert.AdvertInputViewModel
@{
    ViewBag.Title = "Advert creator";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm("Create", "Advert", null, FormMethod.Post, new { @class = "form-horizontal creator", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
            @Html.EditorFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.VehicleModelId, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
            @Html.EditorFor(m => m.VehicleModelId, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Year, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
            @Html.EditorFor(m => m.Year, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
            @Html.EditorFor(m => m.Price, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Power, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
            @Html.EditorFor(m => m.Power, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DistanceCoverage, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
            @Html.EditorFor(m => m.DistanceCoverage, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CityId, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
            @Html.EditorFor(m => m.CityId, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
            @Html.EditorFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Picture", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="btn btn-primary upload-btn">
                Select image
                <input type="file" id="Picture" name="uploadedFiles" multiple="multiple" />
            </div>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary feedback-btn" value="Create" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

